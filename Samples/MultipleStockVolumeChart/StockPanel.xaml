<UserControl x:Class="MultipleStockVolumeChart.StockPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MultipleStockVolumeChart"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal">
        <Label x:Name="stockLabel" MinWidth="80" Content="Symbol"/>
        <Button x:Name="delStockBtn" MinWidth="32" Content="X" Click="delStockBtn_Click"/>
    </StackPanel>
</UserControl>
